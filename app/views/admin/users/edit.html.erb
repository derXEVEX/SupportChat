<div class="admin-container">
  <div class="admin-header">
    <div>
      <h1 class="admin-title">Benutzer bearbeiten</h1>
      <p class="admin-subtitle">Bearbeite die Daten von <%= @user.name %></p>
    </div>
    <div class="admin-actions">
      <%= link_to "Zurück zur Übersicht", admin_users_path, class: "admin-btn admin-btn-secondary" %>
    </div>
  </div>

  <% if flash[:alert] %>
    <div class="admin-alert admin-alert-error">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <% if flash[:notice] %>
    <div class="admin-alert admin-alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if @user.errors.any? %>
    <div class="admin-alert admin-alert-error">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="admin-form">
    <%= form_with model: [:admin, @user], local: true do |form| %>
      <div class="form-group">
        <%= form.label :name, "Benutzername" %>
        <%= form.text_field :name %>
      </div>

      <div class="form-group">
        <%= form.label :email, "E-Mail" %>
        <%= form.email_field :email %>
      </div>

      <div class="form-group">
        <%= form.label :role, "Rolle" %>
        <%= form.select :role, User::ROLES.map { |r| [r.capitalize, r] } %>
      </div>

      <div class="form-group">
        <%= form.label :password, "Neues Passwort (leer lassen, wenn nicht ändern)" %>
        <%= form.password_field :password %>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation, "Passwort bestätigen" %>
        <%= form.password_field :password_confirmation %>
      </div>

      <%= form.submit "Speichern", class: "admin-btn admin-btn-primary" %>
    <% end %>
  </div>
</div>
