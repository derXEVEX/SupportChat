<h1>Benutzer bearbeiten</h1>

<%= form_with model: [:admin, @user], local: true do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </p>

  <p>
    <%= f.label :role %><br>
    <%= f.select :role, User::ROLES.map { |r| [r, r] } %>
  </p>

  <p>
    <%= f.label :password, "Neues Passwort (leer lassen, wenn nicht Ã¤ndern)" %><br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </p>

  <%= f.submit "Speichern" %>
<% end %>

