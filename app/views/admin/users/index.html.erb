<h1>Benutzerverwaltung</h1>

<table>
  <thead>
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Email</th>
    <th>Rolle</th>
    <th>Erstellt</th>
    <th>Aktionen</th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |u| %>
    <tr>
      <td><%= u.id %></td>
      <td><%= u.name %></td>
      <td><%= u.email %></td>
      <td><%= u.role %></td>
      <td><%= u.created_at.strftime("%Y-%m-%d") %></td>
      <td>
        <%= link_to "Bearbeiten", edit_admin_user_path(u) %> |
        <%= link_to "Anzeigen", admin_user_path(u) %> |

      </td>
    </tr>
  <% end %>
  </tbody>
</table>
