<div class="auth-container login-container">
  <div class="auth-header">
    <h1>Anmelden</h1>
    <p class="auth-subtitle">Willkommen zur√ºck!</p>
  </div>

  <% if flash[:alert] %>
    <div class="alert alert-error">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <div class="auth-form">
    <%= form_with url: login_path, method: :post, local: true do |form| %>
      <div class="form-group">
        <%= form.label :email, "E-Mail" %>
        <div class="input-group">
          <div class="input-icon"><i class="icon-mail"></i></div>
          <%= form.email_field :email, placeholder: "deine@email.de", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :password, "Passwort" %>
        <div class="input-group">
          <div class="input-icon"><i class="icon-lock"></i></div>
          <%= form.password_field :password, placeholder: "Dein Passwort", class: "form-control" %>
        </div>
      </div>

      <div class="form-action">
        <%= form.submit "Anmelden", class: "btn btn-primary login-btn" %>
      </div>

      <div class="auth-footer">
        <p>Noch kein Konto? <%= link_to "Jetzt registrieren", register_path %></p>
      </div>
    <% end %>
  </div>
</div>
