<div class="auth-container register-container">
  <div class="auth-header">
    <h1>Registrieren</h1>
    <p class="auth-subtitle">Erstelle dein Konto und starte durch</p>
  </div>

  <% if flash[:alert] %>
    <div class="alert alert-error">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <% if @user&.errors&.any? %>
    <div class="alert alert-error">
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="auth-form">
    <%= form_with model: @user, local: true do |form| %>
      <div class="form-group">
        <%= form.label :name, "Benutzername" %>
        <div class="input-group">
          <div class="input-icon"><i class="icon-user"></i></div>
          <%= form.text_field :name, placeholder: "Dein Name", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :email, "E-Mail" %>
        <div class="input-group">
          <div class="input-icon"><i class="icon-mail"></i></div>
          <%= form.email_field :email, placeholder: "deine@email.de", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :password, "Passwort" %>
        <div class="input-group">
          <div class="input-icon"><i class="icon-lock"></i></div>
          <%= form.password_field :password, placeholder: "Min. 12 Zeichen", class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :password_confirmation, "Passwort bestÃ¤tigen" %>
        <div class="input-group">
          <div class="input-icon"><i class="icon-lock"></i></div>
          <%= form.password_field :password_confirmation, placeholder: "Passwort wiederholen", class: "form-control" %>
        </div>
      </div>

      <div class="form-action">
        <%= form.submit "Registrieren", class: "btn btn-primary" %>
      </div>

      <div class="auth-footer">
        <p>Bereits registriert? <%= link_to "Jetzt anmelden", login_path %></p>
      </div>
    <% end %>
  </div>
</div>
